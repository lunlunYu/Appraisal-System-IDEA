<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <!-- 用户登录 -->
    <listener>
        <listener-class>com.gsj.listener.ServletContextListenerDemo01</listener-class>
    </listener>

    <servlet>
        <servlet-name>LogServlet</servlet-name>
        <servlet-class>com.gsj.servlet.LogServlet</servlet-class>
    </servlet>
    <!-- Servlet映射 -->
    <servlet-mapping>
        <servlet-name>LogServlet</servlet-name>
        <url-pattern>/LogServlet</url-pattern>
    </servlet-mapping>


    <servlet>
        <servlet-name>UpdateServlet</servlet-name>
        <servlet-class>com.gsj.servlet.UpdateServlet</servlet-class>
    </servlet>
    <!-- Servlet映射 -->
    <servlet-mapping>
        <servlet-name>UpdateServlet</servlet-name>
        <url-pattern>/UpdateServlet</url-pattern>
    </servlet-mapping>


</web-app>